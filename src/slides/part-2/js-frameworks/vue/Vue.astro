<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<VueTitle />
	<code data-id="transitiongroup">{`<TransitionGroup />`}</code>
	<div class="content">
		<CodeBlock lang="HTML">
			{
				`<TransitionGroup name="list" tag="ul">
  <li v-for="item in items" :key="item">
    {{ item }}
  </li>
</TransitionGroup>`
			}
		</CodeBlock>
	</div>
</Slide>

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<VueTitle />
	<code data-id="transitiongroup">{`<TransitionGroup />`}</code>
	<div class="content p-0">
		<VueTransitionGroup client:visible />
	</div>
</Slide>

<style lang="scss">
	code {
		font-size: 2em;
	}

	.content.p-0 {
		padding: 0;
	}
</style>
