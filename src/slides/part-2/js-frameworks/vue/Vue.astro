---
import CodeBlock from "../../../../components/CodeBlock.astro";
import Slide from "../../../../components/Slide.astro";
import FakeDropdownMenu from "./FakeDropdownMenu.astro";
import VueTitle from "./VueTitle.astro";
import VueTransition from "./VueTransition.vue";
import VueTransitionGroup from "./VueTransitionGroup.vue";

const { title } = Astro.props;
const subSectionTitle = "Les APIs intégrées";
---

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<VueTitle />
</Slide>

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<VueTitle />
	<br />
	<code data-id="transition">{`<Transition />`}</code>
	<code>{`<TransitionGroup />`}</code>
</Slide>

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<VueTitle />
	<code data-id="transition">{`<Transition />`}</code>
	<div class="content">
		<CodeBlock lang="HTML">
			{
				`<Transition>
  <p v-if="show">Bonjour</p>
</Transition>`
			}
		</CodeBlock>
	</div>
</Slide>

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<VueTitle />
	<code data-id="transition">{`<Transition />`}</code>
	<div class="content"><FakeDropdownMenu /></div>
</Slide>

