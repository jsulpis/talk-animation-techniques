<style lang="scss">
	.title-wrapper {
		position: fixed;
		box-shadow: inset 0 0 6rem 3rem var(--background-page);
		display: grid;
		inset: 0;
		place-items: center;
	}
	h1 {
		font-size: 2.2rem;
		margin-bottom: 1em;
		font-weight: 500;
		max-width: none;
		color: var(--font-color-default);
	}
	.presenter {
		position: fixed;
		bottom: 2rem;
		font-size: 1.3rem;
		line-height: 1.2;
		left: 50%;
		transform: translateX(-50%);

		small {
			font-size: 0.7em;
		}
	}
	strong {
		color: color(primary, 800);
		font-size: 1.3em;
		font-weight: 800;
		background: linear-gradient(
			to bottom,
			var(--color-primary-400) 30%,
			var(--color-primary-700)
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	.border {
		position: absolute;
		z-index: -1;
		text-shadow: 3px 0 #fff, -3px 0 #fff, 0 3px #fff, 0 -3px #fff, 3px 3px #fff,
			-3px -3px #fff, 3px -3px #fff, -3px 3px #fff;
	}
	.techniques {
		font-size: 1.5em;
	}
</style>
