---
import steps from "../../../assets/steps-canvas2d.png";
import Slide from "../../../components/Slide.astro";

const { title } = Astro.props;
---

<Slide>
	<h1>{title} - recap</h1>
	<div class="content p-0">
		<table>
			<thead>
				<tr>
					<th>Étapes calculées</th>
					<th>Performance</th>
					<th>Polyvalence</th>
					<th>Difficulté</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td class="fragment"><img data-src={steps} alt="" /></td>
					<td class="fragment">5/5</td>
					<td class="fragment">2/5</td>
					<td class="fragment">hardcore ☠️</td>
				</tr>
			</tbody>
		</table>
	</div>
</Slide>

<style>
	table {
		font-size: 150%;
		margin-top: 1.5rem;
	}
</style>
