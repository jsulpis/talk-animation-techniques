<style lang="scss">
	figure {
		font-size: 1.3em;
	}

	blockquote p {
		&::before {
			content: "\201c";
		}
		&::after {
			content: "\201d";
		}

		&::before,
		&::after {
			display: inline-block;
			font-family: Inter;
			transform: scale(3);
			height: 1em;
			margin-inline: 1em;
			opacity: 0.3;
		}
	}

	figcaption {
		text-align: right;
		font-size: 0.9em;
		margin-right: 3em;
		font-style: italic;
		color: var(--font-color-default);
		font-weight: bold;
	}
</style>
