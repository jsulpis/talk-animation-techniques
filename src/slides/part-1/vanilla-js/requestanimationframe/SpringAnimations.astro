---
import FlexContainer from "../../../../components/FlexContainer.astro";
import Slide from "../../../../components/Slide.astro";
import CardSpringAnimation from "./CardSpringAnimation.svelte";

const { title } = Astro.props;
const subSectionTitle = "Animation Spring";
---

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<FlexContainer gap="2rem">
		<img
			src="https://help.figma.com/hc/article_attachments/360084136953/EASE_IN_OUT_BACK.gif"
			width="960"
			height="540"
		/>
	</FlexContainer>
</Slide>

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<FlexContainer gap="2rem">
		<img
			src="https://help.figma.com/hc/article_attachments/360084136953/EASE_IN_OUT_BACK.gif"
			width="960"
			height="540"
		/>
		<img
			src="https://help.figma.com/hc/article_attachments/5983821900695/SpringAnimation_GIF2_2x.gif"
			width="960"
			height="540"
		/>
	</FlexContainer>
</Slide>

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<img
		src="https://cdn.sanity.io/images/599r6htc/localized/8bf4cea5feab0c26690db2f2796b2be95f89191e-3840x1360.png?rect=0,1,3840,1358&w=670&h=237&q=75&fit=max&auto=format"
		width="670"
		height="237"
	/>
</Slide>

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<CardSpringAnimation client:visible />
</Slide>

<style>
	img {
		height: 25vw;
		width: auto;
		display: block;
	}
</style>
