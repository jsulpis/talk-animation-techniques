---
import Slide from "../../components/Slide.astro";
import gifExcited from "./images/gif-excited.gif";

const title = "Pour finir";
const subSectionTitle = "Pourquoi on fait ça déjà ?";
---

	<Slide>
		<h1>{subSectionTitle + " "}</h1>
	</Slide>
	<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
		<img data-src={gifExcited} alt="homme excité" />
		<p>Tant de possibilités !</p>
	</Slide>

<Slide sectionTitle={title} subSectionTitle={subSectionTitle}>
	<p>Tu peux faire 1 animation sur une page, pas 15...</p>
	<p>Tu peux faire 2 animations sur une page, pas 15...</p>
	<p>Tu peux faire 3 animations à la limite, mais pas 15...</p>
	<p>...</p>
</Slide>

<style>
	img {
		height: 45vh;
		margin-top: 3em;
	}
	p {
		font-size: 1.3em;
		margin-top: 1em;
	}
</style>
