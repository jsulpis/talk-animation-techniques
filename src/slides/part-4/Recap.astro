---
import stepsCanvas from "../../assets/steps-canvas2d.png";
import stepsTransition from "../../assets/steps-transition.png";
import stepsRaf from "../../assets/steps-raf.png";
import logoZenika from "../../assets/logo-Zenika.png";
import github from "./images/github.svg";
import codepen from "./images/codepen.svg";
import twitter from "./images/twitter.svg";
import Slide from "../../components/Slide.astro";
---

<Slide>
	<div class="author big">
		<h2>@jsulpis</h2>
		<div class="icons">
			<a href="https://github.com/jsulpis" target="_blank"
				><img data-src={github} alt="github" /></a
			>
			<a href="https://codepen.io/jsulpis" target="_blank"
				><img data-src={codepen} alt="codepen" /></a
			>
			<a href="https://twitter.com/jsulpis" target="_blank"
				><img data-src={twitter} alt="twitter" /></a
			>
		</div>
	</div>
</Slide>

<Slide animate={false}>
	<img class="logo" src={logoZenika} />
	<div class="author">
		<h2>@jsulpis</h2>
		<div class="icons">
			<a href="https://github.com/jsulpis" target="_blank"
				><img data-src={github} alt="github" /></a
			>
			<a href="https://codepen.io/jsulpis" target="_blank"
				><img data-src={codepen} alt="codepen" /></a
			>
			<a href="https://twitter.com/jsulpis" target="_blank"
				><img data-src={twitter} alt="twitter" /></a
			>
		</div>
	</div>
	<div class="content p-0">
		<table>
			<thead>
				<tr>
					<th>Technique</th>
					<th>Étapes calculées</th>
					<th>Performance</th>
					<th>Polyvalence</th>
					<th>Difficulté</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td scope="row">Transition CSS</td>
					<td><img data-src={stepsTransition} alt="" /></td>
					<td>5/5</td>
					<td>4/5</td>
					<td>facile 😊</td>
				</tr>
				<tr>
					<td scope="row">Animation CSS</td>
					<td><img data-src={stepsTransition} alt="" /></td>
					<td>5/5</td>
					<td>3/5</td>
					<td>facile 😊</td>
				</tr>
				<tr>
					<td scope="row">Web Animation API</td>
					<td><img data-src={stepsTransition} alt="" /></td>
					<td>5/5</td>
					<td>3/5</td>
					<td>normal 😐</td>
				</tr>
				<tr>
					<td scope="row">requestAnimationFrame()</td>
					<td><img data-src={stepsRaf} alt="" /></td>
					<td>4/5</td>
					<td>5/5</td>
					<td>normal 😐</td>
				</tr>
				<tr>
					<td scope="row">Frameworks JS</td>
					<td><img data-src={stepsTransition} alt="" /></td>
					<td>5/5</td>
					<td>3/5</td>
					<td>normal 😐</td>
				</tr>
				<tr>
					<td scope="row">Librairies JS</td>
					<td><img data-src={stepsRaf} alt="" /></td>
					<td>4/5</td>
					<td>5/5</td>
					<td>difficile 😬</td>
				</tr>
				<tr>
					<td scope="row">Canvas 2D</td>
					<td><img data-src={stepsCanvas} alt="" /></td>
					<td>4/5</td>
					<td>2/5</td>
					<td>difficile 😱</td>
				</tr>
				<tr>
					<td scope="row">Canvas WebGL</td>
					<td><img data-src={stepsCanvas} alt="" /></td>
					<td>5/5</td>
					<td>2/5</td>
					<td>hardcore ☠️</td>
				</tr>
			</tbody>
		</table>
	</div>
</Slide>

<style>
	table {
		font-size: 90%;
		border-spacing: 0 10px !important;
		margin: 1rem auto;
	}
	.content {
		height: initial !important;
	}
	.author {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.big {
		height: 100vh;
		font-size: 200%;
	}
	h2 {
		font-size: 1.5em;
		margin: 0;
	}
	.icons img {
		height: 0.8em;
		margin-inline: 0.1em;
	}
	.logo {
		position: fixed;
		height: 5rem;
		width: auto;
		right: 0.5rem;
		top: 0rem;
	}
</style>
