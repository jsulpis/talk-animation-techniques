---
export interface Props {
	/**
	 * Title of the page
	 */
	title: string;
}

const { title } = Astro.props;
const baseUrl = process.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="/talk-animation-techniques/favicon.svg"
		/>
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta property="og:title" content={title} />
		<meta name="description" content="Slides pour mon talk sur les animations sur le web" />
		<meta property="og:description" content="Slides pour mon talk sur les animations sur le web" />
		<meta property="og:image" content={`${baseUrl}/og-image.png`} />
		<meta property="og:url" content={baseUrl} />
		<meta property="og:image:width" content="1920" />
		<meta property="og:image:height" content="1080" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:creator" content="@jsulpis" />
		<meta name="twitter:site" content="@jsulpis" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
	</head>

	<body>
		<slot />

		<script>
			import Reveal from "reveal.js";
			import RevealHighlight from "reveal.js/plugin/highlight/highlight";
			import RevealMermaid from "reveal.js-mermaid-plugin";

			Reveal.initialize({
				transition: "none",
				history: true,
				progress: false,
				controls: false,
				autoAnimateDuration: 0.7,
				autoAnimateEasing: "cubic-bezier(0.4, 0, 0.2, 1)",
				help: false,
				plugins: [RevealHighlight, RevealMermaid],
				width: "100%",
				height: "100%",
				margin: 0,
				center: false,
			});
		</script>
	</body>
</html>

<style is:global lang="scss">
	@import url("https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700;800&display=swap");
	@import "reveal.js/dist/reveal.css";
	@import "src/styles/main.scss";
</style>
